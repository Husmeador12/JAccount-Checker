<Controls:MetroWindow x:Class="LoLAccountChecker.Views.ExportWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="ExportWindow" Height="450" Width="600" BorderBrush="#CC008A00" BorderThickness="1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="36" />
        </Grid.RowDefinitions>

        <TextBox x:Name="FormatBox" Margin="5,5,5,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                 TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" Grid.Row="0" />
        <Button x:Name="save" Content="Save" Width="100" Margin="0,0,5,0" HorizontalAlignment="Right" VerticalAlignment="Center"
                Grid.Row="1" Click="BtnSaveClick" />
        <Button x:Name="copy" Content="Copy" HorizontalAlignment="Left" Margin="380,6,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100" Click="BtnSaveClick"/>
    </Grid>
</Controls:MetroWindow>